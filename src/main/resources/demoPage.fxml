<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>

<GridPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.TicTacToeController"
          alignment="center" hgap="10" vgap="10" style="-fx-background-color: #F0F0F0;">
  <Button fx:id="button00" onAction="#handleButtonClick" prefWidth="100.0" prefHeight="100.0" text="" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
  <Button fx:id="button01" onAction="#handleButtonClick" prefWidth="100.0" prefHeight="100.0" text="" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
  <Button fx:id="button02" onAction="#handleButtonClick" prefWidth="100.0" prefHeight="100.0" text="" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
  <Button fx:id="button10" onAction="#handleButtonClick" prefWidth="100.0" prefHeight="100.0" text="" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
  <Button fx:id="button11" onAction="#handleButtonClick" prefWidth="100.0" prefHeight="100.0" text="" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
  <Button fx:id="button12" onAction="#handleButtonClick" prefWidth="100.0" prefHeight="100.0" text="" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
  <Button fx:id="button20" onAction="#handleButtonClick" prefWidth="100.0" prefHeight="100.0" text="" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
  <Button fx:id="button21" onAction="#handleButtonClick" prefWidth="100.0" prefHeight="100.0" text="" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
  <Button fx:id="button22" onAction="#handleButtonClick" prefWidth="100.0" prefHeight="100.0" text="" GridPane.rowIndex="2" GridPane.columnIndex="2"/>
  <Button fx:id="resetButton" text="Reset" prefWidth="300.0" onAction="#handleResetButtonClick" GridPane.rowIndex="3" GridPane.columnIndex="0" GridPane.columnSpan="3"/>
</GridPane>
